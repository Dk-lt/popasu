@code {
    private List<UserDto> users = new();
    private List<UserDto> filteredUsers = new();
    private bool showCreateForm = false;
    private CreateUserRequest createRequest = new();
    private string? errorMessage;
    private string? successMessage;
    private bool isLoading = false;
    private string searchText = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadUsers();
    }

    private async Task LoadUsers()
    {
        isLoading = true;
        try
        {
            users = await UsersApi.GetAllAsync();
            FilterUsers();
            errorMessage = null;
        }
        catch (Exception ex)
        {
            errorMessage = $"–ù–µ —É–¥–∞–ª–æ—Å—å –∑–∞–≥—Ä—É–∑–∏—Ç—å –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª–µ–π: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void FilterUsers()
    {
        if (string.IsNullOrWhiteSpace(searchText))
        {
            filteredUsers = users;
        }
        else
        {
            var searchLower = searchText.ToLowerInvariant();
            filteredUsers = users.Where(u => 
                u.Name.ToLowerInvariant().Contains(searchLower) ||
                u.Login.ToLowerInvariant().Contains(searchLower)
            ).ToList();
        }
    }

    private string GetRoleName(Role role)
    {
        return role switch
        {
            Role.Admin => "–ê–¥–º–∏–Ω–∏—Å—Ç—Ä–∞—Ç–æ—Ä",
            Role.Employee => "–°–æ—Ç—Ä—É–¥–Ω–∏–∫",
            _ => role.ToString()
        };
    }

    private void ShowCreateForm()
    {
        showCreateForm = true;
        createRequest = new CreateUserRequest();
        errorMessage = null;
        successMessage = null;
    }

    private async Task HandleCreate()
    {
        try
        {
            await UsersApi.CreateAsync(createRequest);
            successMessage = "–ü–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å —É—Å–ø–µ—à–Ω–æ —Å–æ–∑–¥–∞–Ω!";
            errorMessage = null;
            showCreateForm = false;
            createRequest = new CreateUserRequest();
            await LoadUsers();
        }
        catch (Exception ex)
        {
            errorMessage = $"–ù–µ —É–¥–∞–ª–æ—Å—å —Å–æ–∑–¥–∞—Ç—å –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è: {ex.Message}";
            successMessage = null;
        }
    }

    private async Task DeleteUser(Guid id)
    {
        if (!await JSRuntime.InvokeAsync<bool>("confirm", "–í—ã —É–≤–µ—Ä–µ–Ω—ã, —á—Ç–æ —Ö–æ—Ç–∏—Ç–µ —É–¥–∞–ª–∏—Ç—å —ç—Ç–æ–≥–æ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è?"))
            return;

        try
        {
            await UsersApi.DeleteAsync(id);
            successMessage = "–ü–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å —É—Å–ø–µ—à–Ω–æ —É–¥–∞–ª–µ–Ω!";
            errorMessage = null;
            await LoadUsers();
        }
        catch (Exception ex)
        {
            errorMessage = $"–ù–µ —É–¥–∞–ª–æ—Å—å —É–¥–∞–ª–∏—Ç—å –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è: {ex.Message}";
            successMessage = null;
        }
    }

    private void CancelForm()
    {
        showCreateForm = false;
        createRequest = new CreateUserRequest();
        errorMessage = null;
        successMessage = null;
    }
}
