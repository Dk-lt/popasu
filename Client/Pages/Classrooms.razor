@code {
    private List<ClassroomDto> classrooms = new();
    private List<ClassroomDto> filteredClassrooms = new();
    private bool showCreateForm = false;
    private ClassroomDto? editingClassroom = null;
    private CreateClassroomRequest createRequest = new();
    private UpdateClassroomRequest editRequest = new();
    private string? errorMessage;
    private string? successMessage;
    private bool isLoading = false;
    private string searchText = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadClassrooms();
    }

    private async Task LoadClassrooms()
    {
        isLoading = true;
        try
        {
            classrooms = await ClassroomsApi.GetAllAsync();
            FilterClassrooms();
            errorMessage = null;
        }
        catch (Exception ex)
        {
            errorMessage = $"–ù–µ —É–¥–∞–ª–æ—Å—å –∑–∞–≥—Ä—É–∑–∏—Ç—å –∞—É–¥–∏—Ç–æ—Ä–∏–∏: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void FilterClassrooms()
    {
        if (string.IsNullOrWhiteSpace(searchText))
        {
            filteredClassrooms = classrooms;
        }
        else
        {
            var searchLower = searchText.ToLowerInvariant();
            filteredClassrooms = classrooms.Where(c => 
                c.Number.ToLowerInvariant().Contains(searchLower) ||
                c.ClassroomType.ToLowerInvariant().Contains(searchLower)
            ).ToList();
        }
    }

    private void ShowCreateForm()
    {
        showCreateForm = true;
        editingClassroom = null;
        createRequest = new CreateClassroomRequest();
        errorMessage = null;
        successMessage = null;
    }

    private async Task HandleCreate()
    {
        try
        {
            await ClassroomsApi.CreateAsync(createRequest);
            successMessage = "–ê—É–¥–∏—Ç–æ—Ä–∏—è —É—Å–ø–µ—à–Ω–æ —Å–æ–∑–¥–∞–Ω–∞!";
            errorMessage = null;
            showCreateForm = false;
            createRequest = new CreateClassroomRequest();
            await LoadClassrooms();
        }
        catch (Exception ex)
        {
            errorMessage = $"–ù–µ —É–¥–∞–ª–æ—Å—å —Å–æ–∑–¥–∞—Ç—å –∞—É–¥–∏—Ç–æ—Ä–∏—é: {ex.Message}";
            successMessage = null;
        }
    }

    private void EditClassroom(ClassroomDto classroom)
    {
        editingClassroom = classroom;
        showCreateForm = false;
        editRequest = new UpdateClassroomRequest
        {
            Number = classroom.Number,
            Capacity = classroom.Capacity,
            ClassroomType = classroom.ClassroomType
        };
        errorMessage = null;
        successMessage = null;
    }

    private async Task HandleUpdate()
    {
        if (editingClassroom == null) return;

        try
        {
            await ClassroomsApi.UpdateAsync(editingClassroom.Number, editRequest);
            successMessage = "–ê—É–¥–∏—Ç–æ—Ä–∏—è —É—Å–ø–µ—à–Ω–æ –æ–±–Ω–æ–≤–ª–µ–Ω–∞!";
            errorMessage = null;
            editingClassroom = null;
            await LoadClassrooms();
        }
        catch (Exception ex)
        {
            errorMessage = $"–ù–µ —É–¥–∞–ª–æ—Å—å –æ–±–Ω–æ–≤–∏—Ç—å –∞—É–¥–∏—Ç–æ—Ä–∏—é: {ex.Message}";
            successMessage = null;
        }
    }

    private async Task DeleteClassroom(string number)
    {
        if (!await JSRuntime.InvokeAsync<bool>("confirm", "–í—ã —É–≤–µ—Ä–µ–Ω—ã, —á—Ç–æ —Ö–æ—Ç–∏—Ç–µ —É–¥–∞–ª–∏—Ç—å —ç—Ç—É –∞—É–¥–∏—Ç–æ—Ä–∏—é?"))
            return;

        try
        {
            await ClassroomsApi.DeleteAsync(number);
            successMessage = "–ê—É–¥–∏—Ç–æ—Ä–∏—è —É—Å–ø–µ—à–Ω–æ —É–¥–∞–ª–µ–Ω–∞!";
            errorMessage = null;
            await LoadClassrooms();
        }
        catch (Exception ex)
        {
            errorMessage = $"–ù–µ —É–¥–∞–ª–æ—Å—å —É–¥–∞–ª–∏—Ç—å –∞—É–¥–∏—Ç–æ—Ä–∏—é: {ex.Message}";
            successMessage = null;
        }
    }

    private void CancelForm()
    {
        showCreateForm = false;
        editingClassroom = null;
        createRequest = new CreateClassroomRequest();
        editRequest = new UpdateClassroomRequest();
        errorMessage = null;
        successMessage = null;
    }
}
